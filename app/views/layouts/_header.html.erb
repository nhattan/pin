<div class="container header">
  <a href="/" id="logo">
    <%= image_tag "logo.png" %>
  </a>

  <div id="account-area">
    <% if current_user %>
      <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "btn" %>
    <% elsif controller_name != "sessions"  %>
      <%= link_to "Log in", new_user_session_path, class: "btn" %>
    <% end %>
  </div>
</div>
